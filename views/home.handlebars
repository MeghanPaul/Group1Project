<main>
  <div class="container-fluid flex column align-items-center">
    <h3>Welcome! {{user.username}}</h3>
    <p class="text-dark">You are now logged in.</p>
    <p class="text-dark">Enjoy this wonderful app!</p>
    <button id="logout" class="bg-dark text-white">Log out</button>
  </div>

  <div class="mt-3">
   <ul class="list-group row align-items-center"> 
    {{#each products}}
    <li class="list-group-item bg-light">
      {{> product-info}}
      <a href="/api/products/{{this.id}}" class="btn bg-dark text-white">Comment or upvote on this post!</a>
    </li>
      <br / >
      <br / >
      {{> comments products.comments}}
    {{/each}}
   </ul>
  </div>
</main>

<script src="/js/logout.js"></script>