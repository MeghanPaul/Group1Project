<main class='container justify-content-center'>
    <div class='row justify-content-center mb-2'>
        <button class="tablinks bg-dark mr-1 col-3" onclick="openForm(event, 'Login')">Login</button>
        <button class="tablinks bg-dark ml-1 col-3" onclick="openForm(event, 'SignUp')">Sign Up</button>
    </div>

    <!-- Login Tab -->
    <div id="Login" class='tabcontent justify-content-center'>
        <form class='login-form grow1 bg-light border border-dark-50'>
            <div class='flex column'>
                <div class='flex column m1'>
                    <label htmlFor='email'>Email</label>
                    <input type='email' name='email' class='input' id='email-login'/>
                </div>
                <div class='flex column m1'>
                    <label htmlFor='email'>Password</label>
                    <input type='password' name='password' class='input' id='password-login'/>
                </div>
            <div class='m1'>
                <button type='submit' class='btn bg-dark text-white p1 rounded'>Submit</button>
            </div>
            </div>
        </form>
    </div>

    <!-- Sign Up Tab -->
    <div id="SignUp" class='tabcontent justify-content-center'>
        <form class='signup-form grow1 bg-light border border-dark-50'>
            <div class='flex column'>
                <div class='flex column m1'>
                    <label htmlFor='username'>Username</label>
                    <input type='text' name='username' class='input' id='username-signup'/>
                </div>
                <div class='flex column m1'>
                    <label htmlFor='first name'>First Name</label>
                    <input type='text' name='first name' class='input' id='first name-signup'/>                    
                </div>
                <div class='flex column m1'>
                    <label htmlFor='last name'>Last Name</label>
                    <input type='text' name='last name' class='input' id='last name-signup'/>
                </div>
                <div class='flex column m1'>
                    <label htmlFor='email'>Email</label>
                    <input type='email' name='email' class='input' id='email-signup'/>
                </div>
                <div class='flex column m1'>
                    <label htmlFor='password'>Create Password</label>
                    <input type='password' name='password' class='input' id='password-signup1'/>
                </div>
                <div class='flex column m1'>
                    <label htmlFor='reenter'>Verify Password</label>
                    <input type='password' name='reenter' class='input' id='password-signup2'/>
                </div>
            <div class='m1'>
                <button type='submit' class='btn bg-dark text-white p1 rounded'>Submit</button>
            </div>
            </div>
        </form>
    </div>

</main>

<script src="/js/login.js"></script>
