<section>
  <h2>Create new product</h2>

  <form class="new-product-form">
    <div>
      <label for="product-title">Title</label>
      <input type="text" id="product-title" name="product-title" />
    </div>
     <div>
      <label for="product-description">Description</label>
      <input type="text" id="product-description" name="product-description" />
    </div>
      <div>
      <label for="product-price">Price</label>
      <input type="text" id="product-price" name="product-price" />
    </div>
    <div>
      <label for="product-url">Image Link</label>
      <input id="product-url" name="product-url" />
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

<section>
  <h2>Your products</h2>
  <ol>
    {{#each products}}
    <li>
      {{> product-info this}}
      <a href="/profile/edit/{{this.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
<script src="/js/add-product.js"></script>


