<article class="products">
  <div class="products">
    <ul class="list-group list-group-flush">
      <li class="list-group-item text-dark bg-light">
        {{this.title}}
      </li>
      <li class="list-group-item text-dark bg-light">
        {{this.description}}
      </li>
      <li class="list-group-item text-dark bg-light">
        {{this.price}}
      </li>
      <li class="list-group-item text-dark bg-light">
        {{this.img_link}}
      </li>
      <li class="list-group-item text-dark bg-light">
        {{vote_count}} {{format_plural "vote" vote_count}}!
      </li>
    </ul>
  </div>
</article>